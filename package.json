{
	"name": "@zebec-protocol/dca",
	"version": "1.0.0",
	"description": "A client library to interact with Zebec DCA Program in solana blockchain",
	"main": "./lib/index.js",
	"types": "lib/types",
	"scripts": {
		"build": "npm run clean; npm run build:types; npm run build:compile",
		"build:compile": "npx babel src --extensions .ts --out-dir lib --source-maps",
		"build:types": "tsc -p .",
		"clean": "rm -rf ./lib",
		"format": "prettier --write .",
		"publish": "npm publish --access public",
		"start": "ts-node ./src",
		"test": "mocha --timeout=300000 --check-leaks -r tsconfig-paths/register -r ts-node/register \"./test/**/*.spec.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Zebec-protocol/dca.git"
	},
	"keywords": [
		"dca",
		"dollar cost averaging",
		"solana",
		"zbc",
		"zebec",
		"zebec protocol"
	],
	"author": "Zebec Protocol | Ashish Sapkota",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Zebec-protocol/dca/issues"
	},
	"homepage": "https://github.com/Zebec-protocol/dca#readme",
	"dependencies": {
		"@raydium-io/raydium-sdk": "^1.1.0-beta.2",
		"@solana/spl-token": "^0.2.0",
		"@solana/wallet-adapter-base": "^0.9.5",
		"@solana/wallet-adapter-react": "^0.15.5",
		"@solana/web3.js": "^1.44.0",
		"axios": "^0.27.2",
		"bignumber.js": "^9.0.2",
		"bn.js": "^5.2.1",
		"borsh": "^0.7.0",
		"buffer": "^6.0.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.10",
		"@babel/core": "^7.18.5",
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-typescript": "^7.17.12",
		"@types/bn.js": "^5.1.0",
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"bs58": "^5.0.0",
		"chai": "^4.3.6",
		"dotenv": "^16.0.1",
		"mocha": "^10.0.0",
		"prettier": "^2.7.1",
		"ts-node": "^10.8.1",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.7.3"
	}
}
